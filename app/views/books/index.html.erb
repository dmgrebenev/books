<p id="notice"><%= notice %></p>

<h1><%= books_header_title %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Isbn</th>
      <th>Author</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.description %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to book.author.name, author_path(book.author) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Вы уверены что хотите удалить книгу?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

